.three.columns
  .panel
    %h5{style: "text-align: center"}= "Подробнее о: #{@product.name}"
    #featured
      %img{src: asset_path('1.jpeg')}/
      %img{src: asset_path('2.jpeg')}/
.four.columns
  .panel
    .product{ data: { product_id: @product.id } }
      %ul
        %li= "Name: #{@product.name}"
        %li= "Description: #{@product.description}"
        %li= "Price: #{@product.price}"
        = link_to 'Добавить в Корзину', '#', class: 'small radius button add_to_cart'
  .panel
    = link_to 'Вернуться к Просмотру Товаров', root_path, class: "small radius button"

:javascript
  $(window).load(function() {
      $('#featured').orbit();
  });
