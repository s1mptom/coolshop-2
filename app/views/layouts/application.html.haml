!!!
%html
  %head
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title CoolShop
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .row
      .twelve.columns.centered
        .panel
          %h3{style: "text-align: center"} Куча одинаковой херни по 999 баксов
          %div{style: "text-align: right"}= link_to 'Ваша Корзина', order_products_path, class: 'small button'
      .twelve.columns
        - if notice
          .alert-box.success= notice
        - if alert
          .alert-box.alert= notice
        = yield
