.seve.columns
  %h4 Ваш заказ
  .panel
    = simple_form_for @order do |f|
      %ul
        = f.simple_fields_for :order_products do |op|
          = op.input :product_id, as: :hidden
        = f.input :name, label: "Name"
        = f.input :email, label: "Email", placeholder: "user@domain.com"
        = f.input :phonenumber, label: "Phone Number"
        = f.input :comment, label: "Commentaries"
        = f.button :submit, class: "small button"